{{#each this}}
  <li class='gallery__item' data-id={{id}}>
    {{#if poster_path}}
      <img
        class='gallery__image'
        loading='lazy'
        src='https://image.tmdb.org/t/p/original{{poster_path}}'
        alt='{{original_title}}'
      />
    {{/if}}
    {{#unless poster_path}}
      <img
        class='gallery__image'
        loading='lazy'
        src='https://eiflixnob.live/assets/general/images/no_poster.jpg'
        alt='Постер не знайдено'
      />
      {{! <img class="gallery__image" loading="lazy" src="./images/no-poster.jpg" alt="Постер не знайдено"> }}
    {{/unless}}
    {{#if original_title}}
      <h3 class='gallery__title'>{{original_title}}</h3>
    {{/if}}
    {{#if original_name}}
      <h3 class='gallery__title'>{{original_name}}</h3>
    {{/if}}
    <span class='gallery__genres'>{{genres}}</span>{{#if release_date}}<span
        class='gallery__date'
      >{{release_date}}</span>{{else}}<span
        class='gallery__date'
      >Soon</span>{{/if}}<span class='gallery__vote'>{{vote_average}}</span>
  </li>
{{/each}}